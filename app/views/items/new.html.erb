<h1>Add a new item</h1>

<%= form_with model: @item, local:true do |form|%>
<div>
    <%= form.label :title %>
    <%= form.text_field :title, required:true, minlength: 1%>
</div>

<div>
    <%= form.label :description %>
    <%= form.text_area :description, required:true, minlength: 1%>
</div>

<div>
    <%= form.label :condition %>
    <%= select_tag :condition, options_for_select(Item.conditions.map { |key, value| [key.humanize, key] }), {prompt: "Select Condition of Item"} %>
</div>

<div>
    <%= form.label :category %>
    <%= select_tag :category, options_for_select(Item.categories.map { |key, value| [key.humanize, key] }), {prompt: "Select Condition of Item"}    %>
</div>

<div>
    <%= form.label :price %>
    <%= form.number_field :price, step: :any %>
</div>

<div>
    <%= form.label :photo %>
    <%= form.file_field :photo %>
</div>


<%= form.submit "Submit" %>
<%= link_to "Cancel", :back %>

<%end%>


