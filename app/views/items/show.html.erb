<h2 class="title has-text-centered"><%= @item.title%></h2>
<p class="subtitle has-text-centered"><strong>Seller:</strong> <%= @item.seller.username %></p>

<div class="item">
    <div class="item-div">
            <p>
        <% if @item.photo.attachment %>
        <%= image_tag @item.photo, class: "item-image" %>
        <%end%>
        </p>
    </div>

    <div class="item-div">
        <p><strong>Description:</strong> <%= @item.description%></p>
        <p><strong>Condition:</strong> <%= @item.condition %></p>
        <p><strong>Category:</strong> <%= @item.category %></p>
        <p><strong>Price:</strong> <%= number_to_currency(@item.price) %></p>
        <p class="button is-primary">Purchase</p>
    </div>
</div>